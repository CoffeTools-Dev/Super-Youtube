{
  "manifest_version": 3,
  "name": "Super YouTube",
  "version": "1.0",
  "description": "Boost YouTube with 20+ tools: screenshots, loops, sponsor skipping, PiP, filters and UI tweaks.",
  "author": "Super YouTube Team",
  "permissions": [
    "storage",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "https://sponsor.ajay.app/*"
  ],
  "options_page": "popup/popup.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Super YouTube Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": [
        "content/utils.js",
        "content/player-controls.js",
        "content/tools.js",
        "content/interface.js",
        "content/main.js"
      ],
      "css": ["content/styles.css"],
      "run_at": "document_end",
      "all_frames": false,
      "match_about_blank": false
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
